<div class ="text-center">
    <div class="row">
        <div ng-controller="bikeController">
            <div class = "col-lg-1">

            </div>
            <div class="col-lg-9">
                <div class="box">

                    <h2>Add a Bike</h2>
                    <hr>

                    <form ng-submit="addBike()">
                        <div class="form-group" align="center">
                            Serial Number
                            <input type="string"
                                   class="form-control"
                                   ng-model="bike.serial_number"
                                   ng-style="{'width': 250 + 'px'}"/>
                        </div>

                        <div class="form-group" align="center">
                            Nickname
                            <input type="string"
                                   class="form-control"
                                   ng-model="bike.nickname"
                                   ng-style="{'width': 250 + 'px'}"/>
                        </div>

                        <div class="form-group" align="center">
                            Color
                            <input type="string"
                                   class="form-control"
                                   ng-model="bike.color"
                                   ng-style="{'width': 250 + 'px'}"/>
                        </div>
                        <div class="form-group" align="center">
                            Make
                            <input type="string"
                                   class="form-control"
                                   ng-model="bike.make"
                                   ng-style="{'width': 250 + 'px'}"/>
                        </div>
                        <div class="form-group" align="center">
                            Model
                            <input type="string"
                                   class="form-control"
                                   ng-model="bike.model"
                                   ng-style="{'width': 250 + 'px'}"/>
                        </div>

                        <div class="form-group" align="center">
                            Frame Size (in inches)
                            <input type="number"
                                   min="13"
                                   max="23"
                                   class="form-control"
                                   ng-model="bike.frame_size"
                                   ng-style="{'width': 250 + 'px'}"/>
                        </div>

                        <div class="form-group" align="center">
                            Type
                            <select name="bikeTypes"
                                    type="string"
                                   class="form-control"
                                   ng-model="type"
                                   ng-style="{'width': 250 + 'px'}">
                                <optioxn value="Mountin">Mountain Bike</optioxn>
                                <option value="Racer">Racing Bike</option>
                                <option value="Hybrid">Hybrid Bike</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>


                        <button type ="submit"  class="btn btn-primary">Create</button>
                        //ng-disabled="bike.type===undefined"





                    </form>
                </div>
            </div>
            <div class = "col-lg-1">

            </div>
        </div>
    </div>

</div>