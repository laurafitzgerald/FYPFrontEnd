


<div class = "text-center">

    <div class = "row">


        <div ng-controller="activityController">

            <div class = "col-lg-1">

            </div>
            <div class="col-lg-10">
                <div class="box">

                    <h2>Add An Activity</h2>
                    <hr>
                    <form   ng-submit="addActivity()" >



                        <div class="form-group" align="center">
                            Activity Name
                            <input type="string"
                                   class="form-control"
                                   placeholder="Name"
                                   ng-model="activity.name"
                                   ng-style="{'width': 250 + 'px'}"/>
                        </div>

                        <div class="form-group" align="center">
                            Distance
                            <input step="0.01"
                                   type="number"
                                   class="form-control"
                                   placeholder="Distance in KM"
                                   ng-model="activity.distance"
                                   ng-style="{'width': 250 + 'px'}"/>
                        </div>

                        <div class="form-group" align="center">
                            Time
                            <input type="number"
                                   class="form-control"
                                   placeholder="Time in Minutes"
                                   ng-model="activity.time"
                                   ng-style="{'width': 250 + 'px'}"/>
                        </div>

                        <div class="form-group" align="center">
                            Type
                            <select name="type"
                                    class="form-control"
                                    ng-model="activity.type"
                                    ng-options="option.value as option.name for option in types"
                                    ng-style="{'width': 250 + 'px'}">

                                <option value="Cycle">Cycle</option>
                                <option value="Run">Run</option>
                            </select>
                        </div>



                        <button type ="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>

            <div class = "col-lg-1">

            </div>
        </div>
    </div>

</div>





