<div class=" text-center">

    <div class="row">

        <div class = "col-lg-1">

        </div>
        <div class ="col-lg-8">
            <div class = "box">

                <h1>Your Home Feed</h1>
                <div ng-controller="homeController as list">
                    <h3>It's easy to ship using docker and kubernetes</h3>
                    <table class = "table table-striped table-hover"  valign="middle">

                        <thead class="table-row">
                        <th valign="middle">
                                <span class="table-down" valign="middle">Username
                                </span>
                        </th>
                        <th></th>
                        <th valign="middle">
                                <span class="table-down" valign="middle">Activity Name
                                </span>
                        </th>
                        <th valign="middle">
                                <span class="table-down" valign="middle">Activity Date
                                </span>
                        </th>
                        <th valign="middle">
                                <span class="table-down" valign="middle">
                                     <a href="#/activities" class="btn btn-primary">
                                         <span class="fa fa-child"></span>Your Activities
                                     </a>
                                </span>
                        </th>

                        </thead>
                        <div ng-show="!(feedActivities | orderBy:'timestamp').length">No Activities to show</div>
                        <tbody ng-repeat="activity in feedActivities | orderBy:'-timestamp' | limitTo: limit">


                        <tr valign="middle"  class="table-row">


                            <td>
                                <span class="table-down"  valign="middle">
                                {{activity.username}}
                                </span>

                            </td>
                            <td>

                                <i ng-if="activity.type=='Run'"class="material-icons">directions_run</i>
                                <i ng-if="activity.type=='Cycle'" class="material-icons">directions_bike</i>



                            </td>

                            <td>
                                <span class="table-down"  valign="middle">
                                {{activity.name}}
                                </span>

                            </td>
                            <td>
                                <span class="table-down" valign="middle">
                                {{activity.timestamp | limitTo: 16}}
                                </span>
                            </td>


                        </tr>


                        </tbody>

                    </table>
                    <div valign="center">
                        <button class="btn btn-primary" ng-click="incrementLimit()" ng-disabled="limit>=feedActivities.length">See More<span class = "fa fa-arrow-down"></span></button>
                        ---
                        <button class="btn btn-primary" ng-click="decrementLimit()"  ng-disabled="limit===5"><span class = "fa fa-arrow-up"></span>See Less</button>
                    </div>
                </div>
            </div>
         </div>

        <div class = "col-lg-2" >
            <div class = "box" ng-controller="bikesController as list">
                <h4>Your Bikes</br><span class="fa fa-bicycle"></span></h4>
                <hr>
                <div ng-show="bikes.length===0"><p style="font-size:12px">You haven't any bikes added</p><p style="font-size:12px">Click <a href="#addbike"><b>here</b></a> to add some gear</p>
                </div>
                <div ng-repeat="bike in bikes | limitTo: 2">
                    <p><b>Serial: </b>{{bike.serial_number}}</p>
                    <p><b>Nickname : </b>{{bike.nickname}}</p>
                    <hr>
                </div>
                <a href="#/bikes" class="btn btn-primary">
                    <span class="fa fa-bicycle"></span>See All
                </a>

            </div>

            <div class ="box" ng-controller="friendsController as list">
                <h4>Your Friends</br><span class="fa fa-users"></span></h4>
                <hr>
                <div ng-repeat="friendship in friendships | orderBy:'-timestamp' | limitTo: 2">

                    <p><b>Name : </b>{{friendship.friend_name}}</p>

                    <hr>
                </div>
                <a href="#/friends" class="btn btn-primary">
                    <span class="fa fa-users"></span>See All
                </a>

            </div>

        </div>

        <div class = "col-lg-1">

        </div>
    </div>

  </div>