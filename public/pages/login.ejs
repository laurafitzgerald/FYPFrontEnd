<div class = "text-center>">
    <div class="row">
        <div ng-controller="loginController">
            <div class = "col-lg-1">

            </div>
            <div class = "col-lg-5" >
                <div class="box" class="text-center" style="min-height: 500px;">
                        <h2 class="text-center">Login</h2>
                    <hr>
                    <form ng-submit="login()" valign="center">
                        <div class="form-group" align = "center">
                            Username
                            <input type="string"
                                   class="form-control"
                                    ng-model="userlogin.username"
                                   ng-style="{'width': 250 + 'px'}"
                                    />
                        </div>



                        <div class="form-group" align="center">
                            Password
                            <input type="password"
                                   class="form-control"
                                    ng-model="userlogin.password"
                                   ng-style="{'width': 250 + 'px'}"/>
                        </div>
                        <button valign="center" type="submit" class = "btn btn-primary">Log-in</button>


                    </form>
                </div>

            </div>


            <div class = "col-lg-5" >
                <div class="box" style="min-height: 500px;">
                    <h2 class="text-center">Register</h2>
                    <hr>


                    <button valign="center" type="submit" class = "btn btn-primary">Register</button>

                </div>


            </div>
            <div class = "col-lg-1">

            </div>
        </div>
    </div>
</div>