<div class="container">
    <div class="row">
        <div ng-controller="reportController">
        <div class ="col-lg-12">
            <div class="jumbotron">
                <h2 align="center">Report Bike Missing/Stolen</h2>


                <hr align="left">
                <h3>Bike Details</h3>
                <table class="table table-sm table-bordered table-condensed">
                        <tr>
                            <th>Serial Number</th>
                            <td> {{bike.serial_number}}</td>
                        </tr>

                        <tr>
                            <th>Color</th>
                            <td>{{bike.color}}</td>
                        </tr>
                        <tr>
                            <th>Frame Size</th>
                            <td>{{bike.frame_size}}</td>
                        </tr>

                </table>

                <hr align="left">

                <h3>Details</h3>

           <!---     <div map-lazy-load="https://maps.google.com/maps/api/js" width="100" heigth="100">
                    <ng-map center="waterford" zoom="16" markers="{lat: 52.2593, lng: 7.1101}"></ng-map>
                        <marker position="52.2593, 7.1101"></marker>
                </div>-->

                <div ng-if="ifMap()">
                    <map center="{{user.location}}" zoom="16" on-click="mapClicked($event)">
                        <marker position="{{report.location_lat}},{{report.location_lng}}" ></marker>
                    </map>
                </div>

                <form name ="form"  novalidate class="css-form">
                    <div>
                       <input type="radio" name="somethign" value="1" ng-model="checkboxSelection" ng-click="setMap()"/> Map Input
                       <input type="radio" name="somethign" value="2" ng-model="checkboxSelection" ng-click="setText()"/> Text Input
            </div>


                    <div class="form-group" align="left">
                        Location
                        <input type="string"
                               class="form-control"
                                name="location"
                               ng-model="report.location_name"
                               required=""
                               ng-style="{'width': 250 + 'px'}"/>


                        <div ng-show="form.$submitted">
                            <span ng-show="form.location.$error.required">Please input a location</span>
                        </div>
                    </div>

                    <div class="form-group" align="left">
                        Pulse Number
                        <input type="string"
                               class="form-control"
                               placeholder="Valid Pulse Number required"
                               ng-model="report.pulse_number"
                               ng-style="{'width': 250 + 'px'}"
                                ng-minlength="8"
                                ng-maxlength="8"
                                size="8"/>
                    </div>

                    <div class="form-group" align="left">
                        Status
                        <select type="string"
                                name="statusTypes"
                               class="form-control"
                               placeholder="Name"
                               ng-model="report.status"
                               ng-style="{'width': 250 + 'px'}">
                                <option value="LOST">Lost</option>
                                <option value="STOLEN">Stolen</option>
                                <option value="FOUND">Found</option>
                            </select>
                    </div>


                    <hr align="left">

                    <button type="submit" class="btn btn-danger" ng-click="addReport()">
                        <span class="fa fa-exclamation-triangle"></span> Create Report
                    </button>


                </form>




            </div>


        </div>
    </div>
</div>
    </div>