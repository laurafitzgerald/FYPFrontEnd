<div class="container">
    <div class="row">
        <div class ="col-lg-12">
            <div class="jumbotron text-center">
                <h2>Your Bikes</h2>
                <hr>

                <div ng-controller="bikesController as list">
                    <table class = "table table-striped table-hover" valign="middle">

                        <div ng-show="!(bikes).length"><p>You have no bikes in the system.  <span class = "fa fa-frown-o"></span> </p>
                            <p>Click <a href="#addbike"><b>here</b></a> to add some gear</p>

                        </div>
                        <tbody ng-repeat="bike in bikes | orderBy:'-serial_number'">
                            <tr>

                               <p>Nickname: <span>{{bike.nickname}}</span></p>
                                <p>Color: {{bike.color}}</p>
                                <p>Serial Number: {{bike.serial_number}}</p>


                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>