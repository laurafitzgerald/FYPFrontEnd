<div class="text-center">
    <div class="row">

        <div class = "col-lg-1">

        </div>

        <div class="col-lg-8">
            <div class="box">
                <h2>Your Activities</h2>
                <hr>

                <div ng-controller="activitiesController as list">
                    <table class = "table table-striped table-hover"  valign="center">

                        <thead class="table-row" style="text-align:middle;">
                            <th></th>
                            <th align="middle">Activity Name
                            </th>
                            <th valign="middle">
                                <span class="table-down" >Activity Date
                                </span>
                            </th>
                            <th valign="middle">
                                <span class="table-down" >
                                     <a href="#/addactivity" class="btn btn-primary">
                                         <span class="fa fa-child"></span>Add New
                                     </a>
                                </span>
                            </th>

                        </thead>
                        <div ng-show="!(activities | orderBy:'-timestamp').length">No Activities to show</div>

                        <tbody ng-repeat="activity in activities | orderBy:'-timestamp'">


                            <tr valign="middle"  class="table-row">

                            <td>

                                <i ng-if="activity.type=='Run'"class="material-icons">directions_run</i>
                                <i ng-if="activity.type=='Cycle'" class="material-icons">directions_bike</i>



                            </td>

                            <td>
                                <span class="table-down">
                                {{activity.name}}
                                </span>

                            </td>
                            <td>
                                <span class="table-down" >
                                {{activity.timestamp}}
                                </span>
                            </td>

                            <td>

                               <span class="table-down" >

                                    <button type="button" class="btn btn-default" ng-click="delete(activity)">
                                        <span class="fa fa-trash"></span> Remove

                                    </button>
                                    <button type="button" class="btn btn-default" ng-click="edit(activity)">
                                        <span class="fa fa-pencil"></span> Edit
                                    </button>
                                </span>
                            </td>

                            </tr>

                        </tbody>


                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-2">

            <div class = "box">
                <h3>Your Activities</h3>
                <p> {{noOfCycles}} cycles</p>
                <p> {{noOfRuns}} runs</p>

            </div>

        </div>

        <div class = "col-lg-1">

        </div>
    </div>
</div>